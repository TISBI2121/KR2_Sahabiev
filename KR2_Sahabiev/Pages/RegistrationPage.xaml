<Page x:Class="KR2_Sahabiev.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KR2_Sahabiev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Name" />
            <TextBox Text="{Binding Name}" />
            <TextBlock Text="Surname" />
            <TextBox Text="{Binding Surname}"/>
            <TextBlock Text="Login"/>
            <TextBox Text="{Binding Login}" />
            <TextBlock Text="Password"/>
            <TextBox Text="{Binding Password}" />
            <TextBlock Text="Passport" />
            <TextBox Text="{Binding Passport}" />
            <TextBlock Text="Phone" />
            <TextBox Text="{Binding Phone}" />
            <TextBlock Text="Address" />
            <TextBox Text="{Binding Address}" />
            <TextBlock Text="Role"/>
            <ComboBox x:Name="CBRoles" DisplayMemberPath="Name" SelectedItem="{Binding Role}"/>
            <Button x:Name="BRegistrate" Content="Registrate" Click="BRegistrate_Click"/>
                <Button x:Name="BBack" Content="Back" Click="BBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
